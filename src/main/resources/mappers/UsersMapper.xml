<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ekang.studyroom.mapper.UsersMapper">
    <select id="getAllUsers" resultType="com.ekang.studyroom.dto.UsersDTO">
        SELECT * FROM users
    </select>
    <select id="getUserById" resultType="com.ekang.studyroom.dto.UsersDTO">
        SELECT * FROM users WHERE user_id = #{id}
    </select>
    <insert id="createUser" parameterType="com.ekang.studyroom.dto.UsersDTO">
        INSERT INTO users (create_date, first_name, last_name, is_active)
        VALUES (current_date, #{firstName}, #{lastName}, #{isActive})
    </insert>
    <delete id="deleteUserById" parameterType="int">
        DELETE FROM users WHERE user_id = #{id}
    </delete>
</mapper>